{
  "name": "starter-dev-env",
  "version": "1.0.0",
  "description": "JavaScript Starter Kit Development Environment ",
  "main": "index.js",
  "repository": "git@github.com:RTSpecialty/starter-dev-env.git",
  "author": "Jeremy Fowler <jeremy.f76@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prestart": "babel-node scripts/startMessage.js",
    "start": "npm-run-all --parallel security-check srcServer lint:watch test:watch mocks:generate mocks:server",
    "srcServer": "babel-node scripts/srcServer.js",
    "distServer": "babel-node scripts/distServer.js",
    "lint": "esw webpack.config.* src scripts --color",
    "lint:watch": "yarn run lint -- --watch",
    "security-check": "nsp check",
    "localtunnel": "lt --port 3000",
    "share": "npm-run-all --parallel srcServer localtunnel",
    "test": "mocha --reporter progress scripts/testSetup.js \"src/**/*.test.js\"",
    "test:watch": "yarn run test -- --watch",
    "mocks:generate": "babel-node scripts/mocks/generate",
    "mocks:server": "json-server --watch src/server/mocks/db.json --port 3001",
    "clean-dist": "rimraf ./dist && mkdir dist",
    "prebuild": "npm-run-all --parallel clean-dist security-check test lint",
    "build": "babel-node scripts/build.js",
    "postbuild": "npm-run-all --parallel distServer mocks:server"
  },
  "dependencies": {
    "whatwg-fetch": "^2.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-latest": "^6.16.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "chalk": "^1.1.3",
    "cheerio": "^0.22.0",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "eslint": "^3.13.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "eslint-watch": "^2.1.14",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^2.26.0",
    "jest": "^18.1.0",
    "jsdom": "^9.9.1",
    "json-schema-faker": "^0.4.0",
    "json-server": "^0.9.4",
    "localtunnel": "^1.8.2",
    "mocha": "^3.2.0",
    "npm-run-all": "^4.0.0",
    "nsp": "^2.6.2",
    "numeral": "^2.0.4",
    "open": "^0.0.5",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "webpack": "^1.14.0",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.15.0",
    "webpack-md5-hash": "^0.0.5"
  }
}
